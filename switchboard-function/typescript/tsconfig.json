{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true
  }
}